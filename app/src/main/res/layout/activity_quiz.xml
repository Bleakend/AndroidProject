<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    android:padding="24dp"
    tools:context=".QuizActivity">

    <!-- Header with back button and question count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="â†"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="#111827" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1 of 10"
            android:textColor="#111827"
            android:textSize="16sp"
            android:gravity="center" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#111827"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#E5E7EB"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="4dp" />

    <!-- Answers container -->
    <LinearLayout
        android:id="@+id/answers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/label_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:buttonTint="#6200EE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/label_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:buttonTint="#6200EE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/label_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:buttonTint="#6200EE" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_submit_answer"
        android:text="Submit Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/primary_color"
        app:rippleColor="@color/primary_ripple_color"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_gravity="bottom" />
</LinearLayout>